<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.redisannotation.dao.DataMapper">
    <resultMap id="dataMap" type="com.example.redisannotation.model.Data">
        <id column="ID" property="ID"/>
        <result column="Temperature" property="Temperature"/>
        <result column="Humidity" property="Humidity"/>
        <result column="Voice_in" property="Voice_in"/>
    </resultMap>

    <select id="getDataById" resultMap="dataMap">
        select * from data where ID=#{ID}
    </select>
    <update id="updateData">
        update data
        set Temperature=#{Temperature},Humidity=#{Humidity},Voice_in=#{Voice_in}
        where ID=#{ID}
    </update>
    <delete id="deleteData">
        delete from data where ID=#{ID}
    </delete>
</mapper>